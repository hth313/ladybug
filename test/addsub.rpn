;;; Test ADD and SUB

.import ladybug

#include "ladybug.h"

LBL "ADDSUB"
WSIZE 64
integer 4
MASKL IND X
SUB
integer 0x1000000000000004
CMP Y
FC? 00
SF 99

; check overflow
WSIZE 8
SF 02
integer 0x60
ENTER
ADD
FC? 04
SF 99
FS? 03
SF 99
FS? 00
SF 99
FC? 01
SF 99

ENTER
ADD     ; gives 0x80  (and carry)
FC? 03
SF 99
FC? 01
SF 99
FS? 00
SF 99
MASKL 1
SUB     ; gives 00
FC? 00
SF 99
FS? 03
SF 99
FS? 04
SF 99

;; test invariant
WSIZE 16
integer 64
STI 01
LBL 01
WSIZE IND 01
MASKL 08
integer 0
LDI Y
SUB
ADD
FC? 00
SF 99
FS? 01
SF 99
WSIZE 16
LDI 01
DECI 01
integer 16
SUB
FC? 00
GTO 01

;; test 80 00 SUB in signed mode and unsigned mode, it should not set overflow
WSIZE 08
SF 02
integer 0x80
integer 0
SUB
FS? 04
SF 99

CF 02
integer 0x80
integer 0
SUB
FS? 04
SF 99

;; In unsigned mode, overflow behaves as carry
integer 0xa0
ENTER
ADD
FC? 03
SF 99
FC? 04
SF 99

integer 0x7f
ENTER
ADD
FS? 03
SF 99
FS? 04
SF 99


integer 0
integer 1
SUB
FC? 03
SF 99
FC? 04
SF 99

integer 1
integer 0
SUB
FS? 03
SF 99
FS? 04
SF 99

END
