;;; Test MUL and DMUL

.import ../src/ladybug

.postfix PSEI, DSZI, DECI, INCI, WSIZE, LDI, STI, CMP  (semi-merged-postfix)
.postfix MASKL, MASKR, BITSUM, TST, SL, SR, SB  (semi-merged-postfix)
.postfix #LIT (semi-merged-integer-literal)

LBL "TMUL"
WSIZE 64
MASKL 4   ; F000..
ENTERI
SR 01     ; (F000... >> 1)
SF 02     ; signed mode
DMUL      ; should give  X = F8800....  and Y= 0
TST Y     ; Y= lower part, should be 0
FC? 00
SF 99
#LIT 0xf88
SL 52
SUB
FC? 00
SF 99

CF 02  ; unsigned, multiply 2 by 1,2,4...
#LIT 1
STI 00    ; 1,2,4,8,...
STI 01    ; 1,2,3,...

LBL 01
LDI 00
#LIT 2
MUL
#LIT 1
SL IND 01
SUB
FC? 00
SF 99
LDI 00
SL 01
FS? 03   ; got carry?
GTO 09   ; yes
STI 00
INCI 01
GTO 01

LBL 09

MASKL 7
ENTERI
DMUL
FS? 00
SF 99
#LIT 0xfc04
SL 48
SUB
FC? 00
SF 99
ADD
FS? 03
SF 99
FC? 00
SF 99

MASKL 7
SR 1
MASKR 56
DMUL
#LIT 0x7e
SL 48
MASKR 48
OR
SUB
FC? 00
SF 99
CLXI
#LIT 0x81
SL 56
SUB
FC? 00
SF 99

WSIZE 56
MASKL 2
MASKR 2
DMUL
#LIT 2
SUB
FC? 00
SF 99
RDNI
MASKL 1
SR 1
SUB
FC? 00
SF 99

SF 02
MASKL 2
MASKR 2
DMUL
INCI X
FC? 00
SF 99
RDNI
MASKL 1
SR 1
SUB
FC? 00
SF 99

WSIZE 64
SB 56       ;  keep lower 56 bits 0
MASKR 64    ;  -1
DMUL
INCI X
FC? 00
SF 99
RDNI
MASKL 8
SUB
FC? 00
SF 99

CF 02
MASKL 2
SR 8
MASKL 2
DMUL
#LIT 9
SL 52
SUB
FC? 00
SF 99
ADD
FC? 00
SF 99

MASKL 8   ; check overflow single precision
ENTERI
MUL
FC? 04
SF 99
FC? 00
SF 99

SB 16    ; check overflow single precision
#LIT 0
SB 56
MUL
FC? 04
SF 99
FC? 00
SF 99

WSIZE 16
SF 02
#LIT 0x6000
#LIT 2
MUL
FC? 04
SF 99
#LIT 0x4000
SUB
FC? 00
SF 99

XEQ 02
CF 02
XEQ 02
RTN



LBL 02
#LIT 0xC000
#LIT 2
MUL
FC? 04
SF 99
#LIT 0x8000
SUB
FC? 00
SF 99
END
